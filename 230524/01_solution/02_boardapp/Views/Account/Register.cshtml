@model _02_boardapp.Models.RegisterModel
@{
    ViewData["Title"] = "회원가입";
}

<div class="container">
    <div class="row">
        <div class="col-4 m-auto">
            <main class="form-signin w-100">
                <form asp-action="Register">
                    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <img class="mb-4 m-auto" src="~/iot.png" alt="" width="72">
                    <h1 class="h4 mb-3 fw-normal">회원가입</h1>

                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="phonenumber">
                        <label asp-for="PhoneNumber"></label>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Password">
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                    <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
                </form>
            </main>
        </div>
    </div>
</div>
