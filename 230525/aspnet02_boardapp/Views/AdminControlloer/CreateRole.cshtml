@model aspnet02_boardapp.Models.CreateRoleModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "권한 생성";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h4 class="text-primary"> 권한 생성 </h4>
        </div>
        <div class="col-4 text-end"></div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <form method="Post" asp-action="CreateRole">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button type="submit" value="롤 생성" class="btn btn-sm btn-primary">
                    <span class="bi bi-pin-angle"></span>&nbsp; 롤 생성
                </button>
                <a asp-action="ListRoles" class="btn btn-sm btn-secondary">
                    <i class="bi bi-list-starts"></i>#nbsp; 권한 목록
                </a>
            </form>

        </div>
    </div>
</div>